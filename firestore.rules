/**
 * @fileOverview Firestore Security Rules for MediVault.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for patient data, ensuring that only authenticated users can access their own information. Doctors' information is publicly readable.
 *
 * Data Structure:
 * - /users/{userId}: Stores patient profile information.
 * - /users/{userId}/medicalDocuments/{medicalDocumentId}: Stores medical documents associated with a patient.
 * - /users/{userId}/appointments/{appointmentId}: Stores appointment information for a patient.
 * - /doctors/{doctorId}: Stores publicly accessible doctor information.
 *
 * Key Security Decisions:
 * - Users can only create, read, update, and delete their own data under the /users/{userId} path.
 * - Listing all users is disallowed.
 * - Doctor information is publicly readable but only writable by an admin (currently not implemented, so writes are denied).
 *
 * Denormalization for Authorization:
 * - The 'patientId' field is denormalized in MedicalDocument and Appointment entities to allow for independent authorization checks without requiring additional `get()` calls. This optimization ensures that security rules can efficiently verify ownership.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to patient profile data.
     * @path /users/{userId}
     * @allow (create) Authenticated user can create their own profile if the userId matches their auth UID.
     * @allow (get, update, delete) Authenticated user can read, update, and delete their own profile if the userId matches their auth UID.
     * @deny (create) Authenticated user cannot create a profile with a userId that does not match their auth UID.
     * @deny (get, update, delete) Authenticated user cannot read, update, or delete another user's profile.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to medical documents for a specific patient.
     * @path /users/{userId}/medicalDocuments/{medicalDocumentId}
     * @allow (create) Authenticated user can create a medical document under their own user ID.
     * @allow (get, list, update, delete) Authenticated user can read, list, update, and delete medical documents under their own user ID.
     * @deny (create, get, list, update, delete) Authenticated user cannot access medical documents under another user's ID.
     * @principle Enforces document ownership and prevents unauthorized data access.
     */
    match /users/{userId}/medicalDocuments/{medicalDocumentId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.patientId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.patientId == resource.data.patientId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to appointments for a specific patient.
     * @path /users/{userId}/appointments/{appointmentId}
     * @allow (create) Authenticated user can create an appointment under their own user ID.
     * @allow (get, list, update, delete) Authenticated user can read, list, update, and delete appointments under their own user ID.
     * @deny (create, get, list, update, delete) Authenticated user cannot access appointments under another user's ID.
     * @principle Enforces document ownership and prevents unauthorized data access.
     */
    match /users/{userId}/appointments/{appointmentId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.patientId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.patientId == resource.data.patientId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to doctor information.
     * @path /doctors/{doctorId}
     * @allow (get, list) Any user can read the doctor's information.
     * @deny (create, update, delete) No user can create, update, or delete doctor information (admin only).
     * @principle Allows public read access but restricts write access.
     */
    match /doctors/{doctorId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}